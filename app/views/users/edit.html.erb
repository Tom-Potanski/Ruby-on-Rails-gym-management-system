<% provide(:title, "Edit user") %>
<% provide(:active_menu, 'settings') %>


<h1>Uaktualnij swój profil:</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Imie i nazwisko:" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Email:" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Hasło:" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Potwierdź hasło:" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Zmień obraz</a>
  </div>
</div>