<% provide(:active_menu, 'activities') %>


<h1>Lista zajęć: </h1>

<table class="record-table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
      <th></th>
      <!--<th></th>-->
      <!--<th></th>-->
    </tr>
  </thead>

  <tbody>
  <!--przechodzimy po wszystkich aktywnościach w pętli-->
    <% @activities.each do |activity| %>
      <tr>
        <!--wypisujemy kolejno dane opisujące daną aktywność, nazwa, opis-->
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= link_to 'Pokaż', activity %></td>
        <!--<td><%#= link_to 'Edit', edit_activity_path(activity) %></td>-->
        <!--<td><%#= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

