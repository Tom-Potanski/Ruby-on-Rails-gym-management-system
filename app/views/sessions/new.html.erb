<h1>Zaloguj się:</h1>

<%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email, 'Email: '%><br />
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password, 'Hasło: ' %><br />
      <%= password_field_tag :password %>
    </p>
    <p class="button"><%= submit_tag 'Zaloguj!' %></p>
<% end %>

